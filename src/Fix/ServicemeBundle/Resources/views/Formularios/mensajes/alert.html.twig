{% extends 'formularios/base.html.twig' %}

{% block body %}

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Formulario Mejoramiento
                    </div>

                    {% for flashMessage in app.session.flashbag.get('mensajedanger') %}
                        <div class="col-lg-12">
                            <br />

                            <div class="panel panel-default">
                                <div class="panel-body">
                                <br />

                                    <div class="alert alert-danger">
                                        <a class="alert-link">Error</a>,<em> {{ flashMessage }}</em>
                                    </div>

                                </div>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>    

{% endblock %}


{% block javascripts  %}
    {{ parent() }}
    {% for flashMessage in app.session.flashbag.get('mensajesuccess') %}
        <script type="text/javascript">
            swal("Buen Trabajo!", "{{ flashMessage }}", "success")
        </script>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('errorevidente') %}
        <script type="text/javascript">
            swal("¡Validación identidad No aprobada!", "{{ flashMessage }}", "error")
        </script>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('successevidente') %}
        <script type="text/javascript">
            swal("¡Validación identidad Aprobada!", "{{ flashMessage }}", "success")
        </script>
    {% endfor %}

{% endblock %}
