{% extends 'neon/base_login.html.twig' %}

    {% block body %}
        <div class="login-header login-caret">
            <div class="login-content">

                <a href="{{ url('login') }}" class="logo">
                    <img src="{{ asset('public/neon/assets/images/fix/FINAL_SERVICE-ME.png') }}" alt="" width="275"  />
                </a>

            </div>
        </div>

        <div class="login-form">

            <div class="login-content">

                {% if error -%}
                     <em>-
                        <i class="entypo-traffic-cone" aria-hidden="true"></i>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                        <i class="entypo-traffic-cone" aria-hidden="true"></i>
                    -</em>
                {% else %}
                    <em>- ¡Bienvenido Estimado Humano!. -</em>
                {%- endif %}


                <form action="{{ path('login_check') }}" method="POST">

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="entypo-user"></i>
                            </div>

                            <input type="text" class="form-control" name="_usuario" value="{{ last_username|e }}" id="username" placeholder="Usuario" autocomplete="off" />

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="entypo-key"></i>
                            </div>

                            <input type="password" class="form-control" name="_contrasena" id="password" placeholder="Contraseña" autocomplete="off" />
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        </div>
                    </div>



                    <div class="form-group">
                        <button type="submit" value="Enviar" class="btn btn-primary btn-block btn-login">
                            <i class="entypo-login"></i>
                            Ingresar
                        </button>
                    </div>

                    <!-- Implemented in v1.1.4 -->


                </form>

                <div class="login-bottom-links">
                    <a > &copy; MMXVII &#124;<strong>&nbsp;Analistas Mejoramiento &nbsp;</strong>&#124;&nbsp; Módulo MCR&nbsp;&#124;</a>
                </div>

            </div>

        </div>


    {% endblock %}

{% block javascripts  %}


    {{ parent() }}
{% endblock %}




